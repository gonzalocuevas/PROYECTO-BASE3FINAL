<section class="container mt-4" style="max-width: 90%;">
  <div class="row">
    <h3 class="text-center fw-normal mt-4">Líneas de Producción Registradas</h3>
    <table class="table mx-auto my-3" style="max-width: 80%;">
      <thead>
        <tr>
          <th scope="col">#</th>
          <th scope="col">Nombre de la Línea</th>
          <th scope="col">Capacidad Máxima</th>
        </tr>
      </thead>
      <tbody>
        {{#each lineasProduccion}}
        <tr>
          <th scope="row">{{this.id_linea}}</th>
          <td>{{this.nombre_linea}}</td>
          <td>{{this.capacidad_maxima}}</td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</section>