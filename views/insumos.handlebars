<section class="container mt-4" style="max-width: 90%;">
  <div class="row">
    <h3 class="text-center fw-normal mt-4">Insumos Registrados</h3>
    <table class="table mx-auto my-3" style="max-width: 80%;">
      <thead>
        <tr>
          <th scope="col">#</th>
          <th scope="col">Nombre del Insumo</th>
          <th scope="col">Stock Actual</th>
          <th scope="col">Unidad de Medida</th>
        </tr>
      </thead>
      <tbody>
        {{#each insumos}}
        <tr>
          <th scope="row">{{this.id_insumo}}</th>
          <td>{{this.nombre_insumo}}</td>
          <td>{{this.stock_actual}}</td>
          <td>{{this.unidad_medida}}</td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</section>